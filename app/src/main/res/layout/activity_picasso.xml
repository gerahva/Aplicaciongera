<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".PicassoActivity" android:id="@+id/activity_picasso" android:background="@drawable/cielo">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="45">
		<ImageView
				android:id="@+id/imageViewTop"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="45">
		
		<ImageView
				android:id="@+id/imageViewBottom"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="10">
		
		<Button
				android:id="@+id/buttonLoader"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="CARGAR IMAGEN" android:textAlignment="center" android:fontFamily="@font/adamina"
				android:textSize="14sp" android:background="@android:color/holo_blue_bright" android:textStyle="bold"/>
	
	
	</LinearLayout>


</LinearLayout>