<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/layout_actualizar"
                                                   android:background="@drawable/hojas" android:layout_marginTop="50dp">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtidentactual"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:hint="ID A ACTUALIZAR" android:fontFamily="@font/cinzel_decorative"
            android:textAlignment="center" android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="BUSCAR CLIENTE"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:id="@+id/botonbuscaractualizar"
            android:fontFamily="@font/adamina" android:textSize="14sp" android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/actualizar"
            android:background="@android:color/holo_red_dark" android:textColor="@android:color/background_light"
    />
    <Button
            android:text="ACTUALIZAR CLIENTE"
            android:drawableLeft="@drawable/ic_backup_black_48dp"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:id="@+id/actualizar"
            android:fontFamily="@font/adamina"
            android:textSize="14sp" android:textStyle="bold" android:textAlignment="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:background="@android:color/holo_blue_bright" android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtnombreactualiz" android:fontFamily="@font/gabriela"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/txtidentactual" android:visibility="invisible"
            android:textStyle="bold" android:textAlignment="center"/>
    <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtmailactualiz"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtnombreactualiz" android:fontFamily="@font/gabriela"
            android:textColor="@android:color/black" android:visibility="invisible"
            android:textAlignment="center" android:textStyle="bold"/>
    <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtcalleactualiz"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtmailactualiz" android:fontFamily="@font/gabriela"
            android:textColor="@android:color/black" android:textAlignment="center"
            android:visibility="invisible" android:textStyle="bold"/>
    <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtcpactualiz"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtcalleactualiz" android:visibility="invisible"
            android:fontFamily="@font/gabriela" android:textColor="@android:color/black"
            android:textAlignment="center" android:textStyle="bold"/>
    <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtmuniactualiz"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtcpactualiz" android:visibility="invisible"
            android:fontFamily="@font/gabriela" android:textColor="@android:color/black"
            android:textAlignment="center" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>