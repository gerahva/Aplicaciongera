<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_guardar"

        android:layout_marginTop="50dp" android:background="@drawable/playaz">

    <EditText
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtmuni"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Escribe tu Municipio"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtcp"
            android:textColorHint="@android:color/background_light" android:fontFamily="@font/gabriela"
            android:textSize="18sp" android:textAlignment="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtcp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Escribe tu CP"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtcalle"
            android:textColorHint="@android:color/background_light" android:fontFamily="@font/gabriela"
            android:textAlignment="center" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtcalle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Escribe tu Calle"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtmail"
            android:textColorHint="@android:color/background_light" android:fontFamily="@font/gabriela"
            android:textSize="18sp" android:textAlignment="center"/>
    <Button
            android:text="Guardar    Cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guardar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/design_default_color_primary_dark"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/adamina" android:textSize="14sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtnombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Escribe tu Nombre"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtident"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.0"
            android:textColorHint="@android:color/background_light" android:soundEffectsEnabled="true"
            android:fontFamily="@font/gabriela" android:textSize="18sp" android:textAlignment="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtident" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="Escribe tu ID"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" android:soundEffectsEnabled="true"
            android:fontFamily="@font/gabriela" android:textSize="18sp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:hint="Escribe tu e-mail" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtnombre" android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" android:soundEffectsEnabled="true"
            android:fontFamily="@font/gabriela" android:textSize="18sp" android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>